<% include ../partials/header.ejs %>

<div class = "row">
  <h1 style = "text-align: center;">Add a new comment to <%= campground.name %></h1>
  <div style="width: 35%; margin: 25px auto;">
    <form action = "/campgrounds/<%= campground._id%>/comments" method = "POST">
      <div class="form-group">
        <input type="text" name="comment[text]" placeholder = "Comment.." class="form-control">
      </div>
      <button class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds/<%=campground._id%>">Go Back to Campgrounds</a>
  </div>
</div>

