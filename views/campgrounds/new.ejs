<% include ../partials/header.ejs %>

<div class = "row">
  <h1 style = "text-align: center;">Create a new Campground</h1>
  <div style="width: 35%; margin: 25px auto;">
    <form action = "/campgrounds" method = "POST">
      <div class="form-group">
        <input type="text" name="campName" placeholder = "Campground Name" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="imgURL" placeholder = "Image URL" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="description" placeholder = "Description" class="form-control">
      </div>
      <div class="form-group">
        <input type="number" name="cost" placeholder = "Cost" class="form-control">
      </div>
      <button class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds">Go Back to Campgrounds</a>
  </div>
</div>

