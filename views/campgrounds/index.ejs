<% include ../partials/header.ejs %>

<div class="jumbotron">
  <div class="container">
    <h1>Welcome to YelpCamp</h1> 
    <p>Check out some of our Beautiful hand picked Campgrounds</p>
    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add new Campground</a>
  </div>
</div>

<div class="row text-center" style="display:flex; flex-wrap: wrap;">
  <% myCampgrounds.forEach(function(campground){ %>
    <div class="col-md-3 col-sm-6">
      <div class="thumbnail">
        <img src="<%= campground.image %>">
        <div class="caption">
           <h4><%= campground.name %></h4>
        </div>
        <p>
          <a href = "/campgrounds/<%= campground._id %>" class="btn">More Info</a>
        </p>
      </div>
    </div>
  <% }); %>
</div>

<% include ../partials/footer.ejs %>