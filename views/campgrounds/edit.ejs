<% include ../partials/header.ejs %>

<div class = "row">
  <h1 style = "text-align: center;">Edit <%= campground.name%></h1>
  <div style="width: 35%; margin: 25px auto;">
    <form action = "/campgrounds/<%= campground._id %>?_method=PUT" method = "POST">
      <div class="form-group">
        <input type="text" name="campground[name]" value = "<%= campground.name%>" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="campground[image]" value = "<%= campground.image %>" class="form-control">
      </div>
      <div class="form-group">
        <input type="text" name="campground[description]" value = "<%= campground.description %>" class="form-control">
      </div>
      <div class="form-group">
        <input type="number" name="campground[cost]" value = "<%= campground.cost %>" class="form-control">
      </div>
      <button class="btn btn-primary btn-block">Submit</button>
    </form>
    <a href="/campgrounds/<%=campground._id%>">Go Back</a>
  </div>
</div>

<% include ../partials/footer.ejs %>